<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:ndc="sap.ndc" xmlns="sap.m" controllerName="zdemo.controller.Home" displayBlock="true">
    <Page id="page" title="Digital Calibration" titleAlignment="Center">
        <FlexBox renderType="Div" alignItems="Inherit" justifyContent="Center">
				<Title text="Retrive status via:"/>
        </FlexBox>
        <FlexBox renderType="Div" alignItems="Inherit" justifyContent="Center">
					<SegmentedButton selectedKey="FI" id="SB1" selectionChange="onSelectionChange">
					<items>
						<SegmentedButtonItem text="Functional Location" key="FI"/>
						<SegmentedButtonItem text="Equipment ID" key="EI"/>
					</items>
				</SegmentedButton>
		</FlexBox>
		<FlexBox visible="{oJmodel>/fiVis}" renderType="Div" alignItems="Inherit" justifyContent="Center">
		        <Title text="Scan or enter Functional Location:"/>
	    </FlexBox>
        <FlexBox visible="{oJmodel>/fiVis}" renderType="Div" alignItems="Inherit" justifyContent="Center">
				<HBox>
				<Input id="inputFuncLoc" type="Text" width="20rem"/>
				<ndc:BarcodeScannerButton id="sampleBarcodeScannerButtonZebraOne" scanSuccess="onScanSuccessFL" scanFail="onScanErrorFL" inputLiveUpdate="onScanLiveUpdate" dialogTitle="Barcode Scanner" keepCameraScan="{/keepCameraScanOne}" class="sampleBarcodeScannerButtonWithZebraEB"/>
			</HBox>
        <Button text="Search" type="Emphasized" press="fnOnSubmitFL"/>
			</FlexBox>
		<FlexBox visible="{oJmodel>/EiVis}" renderType="Div" alignItems="Inherit" justifyContent="Center">
		        <Title text="Scan or enter Equipment ID:"/>
	    </FlexBox>
      <FlexBox visible="{oJmodel>/EiVis}" renderType="Div" alignItems="Inherit" justifyContent="Center">
				<HBox>
				<Input id="inputEqpId" type="Text" width="20rem"/>
				<ndc:BarcodeScannerButton id="sampleBarcodeScannerButtonZebra" scanSuccess="onScanSuccessEI" scanFail="onScanErrorEI" inputLiveUpdate="onScanLiveUpdate" dialogTitle="Barcode Scanner " keepCameraScan="{/keepCameraScanOne}" class="sampleBarcodeScannerButtonWithZebraEB"/>
			</HBox>
        <Button text="Search" type="Emphasized" press="fnOnSubmitEQ"/>
			</FlexBox>
      <FlexBox visible="{oJmodel>/fiVis}" renderType="Div" alignItems="Inherit" justifyContent="Center">
				<MessageStrip text="{i18n>wildCardMsg}" showIcon="true" showCloseButton="true" class="sapUiMediumMarginBottom">
			</MessageStrip>
			</FlexBox>
    </Page>
</mvc:View>