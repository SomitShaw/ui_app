<mvc:View controllerName="zcalib.controller.EqpList"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:ndc="sap.ndc"
    displayBlock="true"
	xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="pageEqpDet" title="{i18n>title}" titleAlignment="Center">
       
		<Table id="idProductsDetailsTable"
		inset="false"
		items="{oJmodel>/oEqpList}">
		<headerToolbar>
			<OverflowToolbar>
				<content>
					<Title text="Equipment List" level="H2"/>
					<ToolbarSpacer />
				</content>
			</OverflowToolbar>
		</headerToolbar>
		<infoToolbar>
			<OverflowToolbar>
				<Label text=""/>
			</OverflowToolbar>
		</infoToolbar>
		<columns>
			<Column
				width="12em">
				<Text text="Equipment ID" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Functional Location" />
			</Column>
			
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="End">
				<Text text="Released Range" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="End">
				<Text text="Next Calibration Date" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="End">
				<Text text="Released For Use" />
			</Column>
			
		</columns>
		<items >
			<ColumnListItem vAlign="Middle" type="Navigation" press="onPressEqpRow"
			 class="{=${oJmodel>ReleasedUse} === 'N' ? : 'redBackground' : 'greenBackground'}">
			 <customData>

			<core:CustomData key="mydata" value="{oJmodel>ReleasedUse}" writeToDom="true">
			</core:CustomData>

			</customData>
				<cells>
					<ObjectIdentifier
						title="{oJmodel>Equnr}"
						text="{oJmodel>Eqktx}"/>
					<Text
						text="{oJmodel>Tplnr}" />
					<Text
						text="{oJmodel>RelSelection}" />
					
                    <Text
                       
                        text = "{
                        path: 'oJmodel>NextDate',
                        type: 'sap.ui.model.type.Date',
                        formatOptions: {
                          pattern: 'dd.MM.yyyy'
                        }
                      }" /> 
					<Text
						text="{oJmodel>ReleasedUse}" />
					
				
				</cells>
				

			</ColumnListItem>
		</items>
	    </Table>
		
    </Page>
</mvc:View>
